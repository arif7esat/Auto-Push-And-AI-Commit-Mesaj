        ;;
    restart)
        echo -e "${PURPLE}ğŸ”„ AutoPush yeniden baÅŸlatÄ±lÄ±yor...${NC}"
        "$SCRIPTS_DIR/stop_autopush.sh"
        sleep 2
        "$SCRIPTS_DIR/start_autopush.sh"
        ;;
    *)
        echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
        echo -e "${CYAN}â•‘                    ${WHITE}AutoPush${CYAN} - Basit Otomatik Git Push Sistemi${NC}"
        echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo ""
        echo -e "${WHITE}KullanÄ±m: ${CYAN}$0 [start|stop|status|restart]${NC}"
        echo ""
        echo -e "${YELLOW}ğŸ“‹ Komutlar:${NC}"
        echo -e "  ${GREEN}start${NC}   - AutoPush'Ä± baÅŸlat"
        echo -e "  ${YELLOW}stop${NC}    - AutoPush'Ä± durdur"
        echo -e "  ${BLUE}status${NC}  - Durumu kontrol et"
        echo -e "  ${PURPLE}restart${NC} - AutoPush'Ä± yeniden baÅŸlat"
        echo ""
        echo -e "${YELLOW}âœ¨ Ã–zellikler:${NC}"
        echo -e "  - ${GREEN}10 dakikada bir otomatik push${NC}"
        echo -e "  - ${GREEN}Backup branch'e push yapar${NC}"
        echo -e "  - ${GREEN}Arka planda Ã§alÄ±ÅŸÄ±r${NC}"
        echo -e "  - ${GREEN}Terminal kapansa bile Ã§alÄ±ÅŸmaya devam eder${NC}"
        echo -e "  - ${GREEN}Log tutar${NC} (${CYAN}autopush-scripts/logs/program_log${NC})"
        echo -e "  - ${GREEN}PID bilgisini saklar${NC} (${CYAN}autopush-scripts/logs/autopush.pid${NC})"
