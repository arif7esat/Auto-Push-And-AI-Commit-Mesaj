SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SCRIPTS_DIR="$SCRIPT_DIR/autopush-scripts"

# Scripts klasÃ¶rÃ¼ var mÄ± kontrol et
if [ ! -d "$SCRIPTS_DIR" ]; then
    echo -e "${RED}âŒ HATA: autopush-scripts klasÃ¶rÃ¼ bulunamadÄ±!${NC}"
    exit 1
