# Mevcut dizinde .git'i kontrol et
if [ ! -d ".git" ]; then
    echo -e "${RED}âŒ HATA: Bu dizinde .git repository bulunamadÄ±!${NC}"
    echo "Mevcut dizin: $SCRIPT_DIR"
    exit 1
